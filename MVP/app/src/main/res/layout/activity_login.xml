<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appsbyahrens.mvp.login.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/loginActivity_firstName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_activity_edit_first_name_hint"
            android:text="@string/login_activity_edit_first_name_hint"
            />
        <EditText
            android:id="@+id/loginActivity_lastName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_activity_edit_last_name_hint"
            android:text="@string/login_activity_edit_last_name_hint"
            />

        <Button
            android:id="@+id/loginActivity_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_activity_button_login"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
